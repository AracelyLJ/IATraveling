<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="HELLO"/>

        <ImageView
            android:id="@+id/img_photo_city"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/logo_name_bg"/>

        <!--<TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="CIUDAD"/>-->

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_map_"
                android:text="MAP"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:text="WHEATER"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"/>
            <Button
                android:text="SEARCH"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="20dp"
            android:background="@color/black"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:padding="10dp"
            android:layout_gravity="center_horizontal">

            <TableRow>
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_places_to_visit"
                    app:cardBackgroundColor="@color/orange_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="2dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/baseline_signpost_24"/>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="IMPORTANT PLACES"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:paddingBottom="10dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_food"
                    app:cardBackgroundColor="@color/orange_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_column="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/baseline_restaurant_24" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="FOOD"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:paddingBottom="10dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </TableRow>
            <TableRow>
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_history"
                    app:cardBackgroundColor="@color/orange_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="2dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/baseline_book_24"/>

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HISTORY"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:paddingBottom="10dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_map"
                    app:cardBackgroundColor="@color/orange_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="2dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/baseline_location_on_24"/>

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:text="MAP"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </TableRow>

        </TableLayout>
    </LinearLayout>


</ScrollView>